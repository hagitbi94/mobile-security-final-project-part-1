<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_backro"
    android:padding="20dp"
    tools:context=".activities.RecordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:backgroundTintMode="src_in"
        android:orientation="vertical">

    <TextView
        android:id="@+id/TopTenRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top ten Record"
        android:textColor="@color/black"
        android:textSize="30dp"/>

    <FrameLayout
        android:id="@+id/main_LAY_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="24dp"
        android:background="#DD0821"/>

    <FrameLayout
        android:id="@+id/main_LAY_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="24dp"
        android:background="#DD0821"/>

    <Button
        android:id="@+id/backToMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginLeft="110dp"
        android:layout_marginBottom="51dp"
        android:text="main menu" />

    </LinearLayout>

</RelativeLayout>