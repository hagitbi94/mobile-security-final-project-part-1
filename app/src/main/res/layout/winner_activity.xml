<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_backro"
    tools:context="com.example.myapplication.example.activities.WinnerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/game_backro"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Winner_LBL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="The Winner is: "
            android:textColor="#120101"
            android:textSize="30dp"
             />

        <ImageView
            android:id="@+id/winner_IMG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_weight="1.5"
            android:rotationX="2"
             />


        <TextView
            android:id="@+id/Final_Score_LBL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Your Score: "
            android:textColor="#090808"
            android:textSize="50dp"
             />

        <EditText
            android:id="@+id/enter_LBL_name"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginBottom="90dp"
            android:gravity="center|bottom"
            android:hint="Enter your name"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-thin"
            android:textSize="20dp"
            android:layout_weight="0.5"
            android:textStyle="bold" />

        <Button
            android:id="@+id/backToMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="main menu"
            android:layout_marginBottom="40dp"

            ></Button>
    </LinearLayout>


</RelativeLayout>