<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_backro"
    android:padding="20dp"
    tools:context="com.example.myapplication.example.activities.MainActivity">


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="welcome to war game"
        android:textSize="30dp"
        android:textColor="@color/black"
        />


    <Button
        android:id="@+id/startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="303dp"
        android:layout_marginEnd="146dp"
        android:layout_centerInParent="true"
        android:text="start gmae" />

    <Button
        android:id="@+id/topten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startGame"
        android:layout_centerInParent="true"
        android:text="top ten" />

</RelativeLayout>