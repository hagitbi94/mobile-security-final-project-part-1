<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_backro"
    android:padding="20dp"
    tools:context=".activities.GameActivity">


    <TextView
        android:id="@+id/mortyscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:paddingLeft="30dp"
        android:textColor="@color/white"
        android:textSize="30dp"
        />

    <TextView
        android:id="@+id/rickscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:paddingLeft="270dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/leftcard"
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/backofacard" />

        <ImageView
            android:id="@+id/rightcard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/backofacard" />


    </LinearLayout>



    <ImageButton
        android:id="@+id/play"
        android:layout_width="65dp"
        android:layout_height="79dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/play" />

    <ImageView
        android:id="@+id/morty"
        android:layout_width="64dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="157dp"
        android:background="@drawable/morty"
        />

    <ImageView
        android:id="@+id/rick"
        android:layout_width="92dp"
        android:layout_height="76dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="155dp"
        android:background="@drawable/rick"
        />

    <ProgressBar
        android:id="@+id/progbar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginBottom="250dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="0"
        android:max="26"
        />

</RelativeLayout>